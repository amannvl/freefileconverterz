# Application
APP_ENV=development
APP_NAME=FreeFileConverterZ
APP_URL=http://localhost:3000
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=freefileconverterz
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_ISSUER=freefileconverterz

# File Uploads
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_TYPES=image/*,application/pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.txt

# S3 Storage (optional, for production)
STORAGE_DRIVER=local  # local or s3
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_USE_SSL=true
S3_FORCE_PATH_STYLE=false

# Email (optional, for notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@freefileconverterz.com
MAIL_FROM_NAME="FreeFileConverterZ"

# Google reCAPTCHA (optional)
RECAPTCHA_ENABLED=false
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_FILE=freefileconverterz.log

# Feature Flags
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_PASSWORD_RESET=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_API_DOCS=true
